<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/itemNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="110dp"
            android:layout_height="102dp"
            app:cardCornerRadius="4dp">

            <ImageView
                android:id="@+id/anhDaiDien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tenBaiViet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/card"
            android:fontFamily="@font/lato"
            android:paddingTop="10dp"
            android:text="Cho F1 về thăm vợ sinh, chủ tịch xã bị tạm đình chỉ công tác 14 ngày"
            android:textColor="#2e2e2e"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ngayDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenBaiViet"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/card"
            android:fontFamily="@font/lato_light"
            android:text="3 Sept 2020"
            android:textColor="#080808"
            android:textSize="10sp"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:id="@+id/dot"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_below="@id/tenBaiViet"
            android:layout_margin="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/ngayDang"
            app:cardCornerRadius="1.5dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6C6C6C" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/loaiTin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tenBaiViet"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/dot"
            android:fontFamily="@font/lato_light"
            android:text="tên loại tin"
            android:textColor="#080808"
            android:textSize="10sp"
            android:textStyle="normal" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>